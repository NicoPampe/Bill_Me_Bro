<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/list_item_group"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/group_list_item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/list_item_group_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_weight="10"
            tools:text="Group Name"/>

        <Button
            android:id="@+id/list_item_group_edit_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/group_list_edit_button"
            android:visibility="invisible"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_list_item_top"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/list_item_group_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            tools:text="Group Creation Date"/>

        <TextView
            android:id="@+id/list_item_group_type_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Group Type"
            android:gravity="right"/>
    </LinearLayout>

</RelativeLayout>