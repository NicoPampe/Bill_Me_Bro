<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title: "
                android:textSize="16dp"
                android:textStyle="bold"/>

            <!-- TODO: ID BELOW NEEDS TO BE CHANGED - LEFT AS IS FOR AlphaRelease-->
            <EditText
                android:id="@+id/receipt_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Receipt Title"/>
        </LinearLayout>

        <include
            layout="@layout/view_camera"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: "
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/receipt_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN TOTALPICKER"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textStyle="bold"/>

            <Button
                android:id="@+id/receipt_date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open DatePicker"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contributor(s): "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/receipt_contributors_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of Contributing Members Here"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>