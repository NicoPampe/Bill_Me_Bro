<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_receipt_preview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Title: "/>

        <TextView
            android:id="@+id/preview_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLANK Title"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date: "/>

        <TextView
            android:id="@+id/preview_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLANK Date"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Time: "/>

        <TextView
            android:id="@+id/preview_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLANK Time"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Location: "/>

        <TextView
            android:id="@+id/preview_location_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLANK Location"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Contributor(s): "/>

        <TextView
            android:id="@+id/preview_contributors_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLANK list of contributing members"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Conflict(s): "/>

        <TextView
            android:id="@+id/preview_conflicts_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLANK list conflicts (late/did not pay)"/>
    </LinearLayout>

</LinearLayout>